{
  "private": true,
  "name": "react-redux-boilerplate",
  "version": "1.0.0-alpha",
  "description": "A react, redux, react-router, webpack boilerplate.",
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "postinstall": "npm run build:vendor",
    "clean": "rimraf dist/",
    "dev": "webpack-dev-server --config build/webpack.dev.config.js & npm run mock",
    "mock": "nodemon --watch mock build/mock-server.js",
    "prebuild": "npm run clean",
    "build": "npm run build:prod",
    "build:prod": "cross-env NODE_ENV=production webpack --config build/webpack.prod.config.js --progress --hide-modules --display-optimization-bailout",
    "build:vendor": "cross-env NODE_ENV=production webpack --config build/webpack.vendor.config.js --progress --hide-modules --display-optimization-bailout",
    "lint": "eslint src/ --fix; exit 0"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/evan2x/react-redux-boilerplate.git"
  },
  "author": {
    "name": "evan2x",
    "email": "evan2zaw@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/evan2x/react-redux-boilerplate/issues"
  },
  "homepage": "https://github.com/evan2x/react-redux-boilerplate#readme",
  "devDependencies": {
    "add-asset-html-webpack-plugin": "^2.1.2",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chalk": "^2.3.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "nodemon": "^1.14.11",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.0.10",
    "pre-commit": "^1.2.2",
    "react-hot-loader": "^4.0.0-beta.16",
    "require-dir": "^0.3.2",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^3.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-saga": "^0.16.0"
  }
}
